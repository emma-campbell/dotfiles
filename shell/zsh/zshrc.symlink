# shortcut to this dotfiles path is $ZSH
export ZSH=$HOME/dotfiles

# we can use the short cut 'c [tab]' to
# get to this folder
export PROJECTS=~/coding

# Enviornment variables go into ~/.localrc
# So that they can't be viewed publically
if [[ -a ~/.localrc ]]
then
  source ~/.localrc
fi

# get all the zsh config files
typeset -U config_files
config_files=($ZSH/**/*.zsh)

# load path files
for file in ${(M)config_files:#*/path.zsh}
do
  source $file
done

unset config_files
