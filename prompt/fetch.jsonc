{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": "~/.ghost.txt",
  "modules": [
    "title",
    "separator",
    {
      "type": "os",
      "format": "{2}"
    },
    {
      "type": "host",
      "format": "{/2}{-}{/}{2}{?3} {3}{?}"
    },
    "kernel",
    "packages",
    "shell",
    "terminal",
    {
      "type": "terminalfont",
      "format": "{/2}{-}{/}{2}{?3} {3}{?}"
    },
    "cpu",
    "break",
    "colors"
  ]
}
