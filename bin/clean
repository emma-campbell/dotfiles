#!/bin/sh
#
# cleans the install
set -e

clean_system () {

    source "$DOTFILES/bin/prompt"
    echo ''

    info 'cleaning install'

    for src in $(find -H "$DOTFILES" -maxdepth 2 -name '*.symlink' -not -path '*.git*')
    do
        dst="$HOME/.$(basename "${src%.*}")"
        delete $dst
        rm -rf dst
    done

    rm -rf "$DOTFILES/git/gitconfig.local.symlink"
    rm -rf "$HOME/.oh-my-zsh"

    success 'clean'

}
